<!DOCTYPE html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar producto</title>    
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<html>
<br>
    <%-include("../partials/head")%>
    <body>
    <%-include("../partials/header")%>
        <div class="w-100">
            <div class="registro">
                <form action="/products/update/<%= products.id %>" method="POST" enctype="multipart/form-data">
                    <% if(typeof errors != 'undefined'){ %>
                        <ul class="claseNueva">
                            <% for (let i = 0; i < errors.length; i++) { %>
                                <li style="color:red; padding-left: 20px;" class="claseNueva">
                                    <%= errors[i].msg %>
                                </li>
                            <% } %> 
                        </ul>
                    <% } %>
                    <label>Nombre</label>
                    <input type="text" name="nombre" value="<%= products.nombre %>">
                    <br><br>
                    <label>Ingredientes</label>
                    <input type="text" name="ingredientes" value="<%= products.ingredientes%>">
                    <br><br>
                    <label>Precio</label>
                    <input type="number" name="precio" value="<%=products.precio%>">
                    <br><br>
                    <label>Imagen</label>
                    <input type="file" name="imagen" value="<%= products.imagen %>">
                    <br><br>
                    <label></label>
                    <input type="submit" value="Editar producto">
                </form>
            </div>
        </div>
        <br>
        <%-include("../partials/footer")%>
    </body>
</html>